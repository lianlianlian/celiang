/* pages/member/index.wxss */
page{
  background: #fff;
}
.top{
  padding: 0 55rpx;
  height: 220rpx;
  display: flex;
  align-items: center;
  color: #fff;
  background: #004EA2;
}
.my-img{
  width: 129rpx;
  height: 129rpx;
  margin-right: 25rpx;
  border-radius: 50%;
}
.name{
  font-size: 18px;
}
.flag{
  font-size: 14px;
  margin-top: 15rpx;
}
.title-box{
  background:rgba(245,245,245,1);
  padding: 0 30rpx;
  font-size: 14px;
  color: #666666;
  line-height: 60rpx;
}
.buy-box{
  display: flex;
  flex-wrap: wrap;
  padding: 28rpx 13rpx;
}
.buy-box .wrap{
  width: 50%;
  padding: 28rpx 16rpx;
}
.buy-box .item{
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  border:2px solid rgba(229, 229, 229, 1);
  border-radius:10rpx;
  height: 174rpx;
}
.buy-box .item.active{
  background:rgba(254,90,12,0.05);
  border:2px solid rgba(254, 90, 12, 1);
}
.buy-box .money{
  font-weight:800;
  color:rgba(254,90,12,1);
  font-size: 23px;
  margin-bottom: 15rpx;
}
.buy-box .date{
  color:rgba(102,102,102,1);
  font-size: 14px;
}
.pro-box{
  margin-top: 240rpx;
  text-align: center;
  font-size: 14px;
  color:rgba(153,153,153,1);
}
.submit-box{
  margin-top: 40rpx;
}